@model mrsProject.Models.RegisterViewModel
@using mrsProject.Controllers
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <h4>@ViewBag.Error</h4>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    @*TODO: Add code for additional fields required for login*@
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.State, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ZipCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCard1, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreditCard1, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label>Select Card Type1</label>
        <label class="radio">@Html.RadioButton("SelectCardType1", CardType.Visa, true) Visa</label>
        <label class="radio">@Html.RadioButton("SelectCardType1", CardType.Discover, true) Discover</label>
        <label class="radio">@Html.RadioButton("SelectCardType1", CardType.AmericanExpress, true) AmericanExpress</label>
        <label class="radio">@Html.RadioButton("SelectCardType1", CardType.Mastercard, true) Mastercard</label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCard2, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreditCard2, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label>Select Card Type2</label>
        <label class="radio">@Html.RadioButton("SelectCardType2", CardType.Visa, true) Visa</label>
        <label class="radio">@Html.RadioButton("SelectCardType2", CardType.Discover, true) Discover</label>
        <label class="radio">@Html.RadioButton("SelectCardType2", CardType.AmericanExpress, true) AmericanExpress</label>
        <label class="radio">@Html.RadioButton("SelectCardType2", CardType.Mastercard, true) Mastercard</label>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CreditCard3, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreditCard3, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label>Select Card Type3</label>
        <label class="radio">@Html.RadioButton("SelectCardType3", CardType.Visa, true) Visa</label>
        <label class="radio">@Html.RadioButton("SelectCardType3", CardType.Discover, true) Discover</label>
        <label class="radio">@Html.RadioButton("SelectCardType3", CardType.AmericanExpress, true) AmericanExpress</label>
        <label class="radio">@Html.RadioButton("SelectCardType3", CardType.Mastercard, true) Mastercard</label>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}