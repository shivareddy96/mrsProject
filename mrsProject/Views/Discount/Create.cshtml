@model mrsProject.Models.Discount
@using mrsProject.Controllers

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CouponCode" class="control-label"></label>
                <input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                Number:@Html.TextBox("DiscountNumber", null, new { @class = "form-control" })
                <div class="text-danger">@ViewBag.Message</div>
                <!--Html.RadioButtonFor(model => model.IsShippingDiscount, "false") Percentage Off Discount
                Html.RadioButtonFor(model => model.IsShippingDiscount, "true") Shipping Discount-->
                <label class="radio">@Html.RadioButton("discount", DiscountDescription.C, true) Shipping </label>
                <label class="radio">@Html.RadioButton("discount", DiscountDescription.Sh, true) Discount</label>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

